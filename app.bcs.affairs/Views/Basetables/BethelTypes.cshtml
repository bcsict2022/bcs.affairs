@model app.bcs.affairs.Models.vmSetupTable1
@{
    ViewData["Title"] = "Bethel Types";
    ViewData["PageName"] = "basetables_betheltypes";
    ViewData["Heading"] = "<i class='fal fa-cog'></i> Base Tables: <span class='fw-300'>Bethel Types</span>";
    ViewData["Category1"] = "basetables";
    ViewData["PageIcon"] = "fal fa-cog";
}

@section HeadBlock {

}

    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <form id="PostForm">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-9">
                                        @Html.LabelFor(m => m.Description)
                                        @(Html.DevExtreme().TextBoxFor(m => m.Description).Width("100%")
                                        .Placeholder("enter bethel type here ....")
                                        .ID("txtdepartment"))
                                </div>

                                <div class="col-3" style="top:23px">
                                    @(Html.DevExtreme().Button().Text("Submit").Height(35)
                                        .Width("100%").UseSubmitBehavior(true)
                                        .Type(ButtonType.Default).StylingMode(ButtonStylingMode.Outlined)
                                        .ID("button"))
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">
                        @(Html.DevExtreme().Button().Text("Submit").Height(35)
                        .Width("100%").UseSubmitBehavior(true)
                        .Type(ButtonType.Default)
                        .ID("button"))
                        </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-container show">
                <div class="panel-content">
                    @(Html.DevExtreme().DataGrid().ID("usgrid").ShowColumnLines(false).ShowRowLines(true).RowAlternationEnabled(true).ShowBorders(true).SearchPanel(s => s.Visible(true).HighlightSearchText(true).HighlightSearchText(true).Width(500))
                        .DataSource(ds => ds.Mvc().Controller("Basetables").Key("Id").LoadAction("GetBethelTypes").DeleteAction("DeleteBethelTypes").UpdateAction("EditBethelTypes"))
                        .Columns(c =>
                        {
                            c.Add().DataField("BethelTypeDescription").VisibleIndex(2).Width("80%").Caption("Bethel Type").SortIndex(0).SortOrder(SortOrder.Asc);
                        }).Editing(ed =>
                        {
                            ed.AllowDeleting(true);
                            ed.AllowUpdating(true);
                            ed.Mode(GridEditMode.Popup);
                        }).Paging(p => p.Enabled(true).PageSize(15)).Width("100%").Pager(pg => pg.ShowInfo(true).ShowPageSizeSelector(true).ShowNavigationButtons(true)))
                </div>
            </div>
        </div>
    </div>
</div>

<div id="loader"></div>
<script type="text/javascript">
    $(function () {
        $("#PostForm").on('submit', function (e) {
            $('#loader').show();
            e.preventDefault();

            setTimeout(() => {
                var dataToPost = $(this).serialize();

                $.post('@Url.Action("BethelTypes", "Basetables")', dataToPost)

                    .done(function (response, status, jqxhr) {

                        if (response.mstatus === "success") {
                            DevExpress.ui.notify({
                                message: "New Bethel Types submitted successfully",
                                type: "success",
                                displayTime: 6000,
                                height: 55,
                                position: "top left"
                            });
                        } else {
                            DevExpress.ui.notify({
                                message: response.mstatus,
                                type: "error",
                                displayTime: 6000,
                                height: 55,
                                position: "top"
                            });
                        }


                        //$("#txtDescriptions").dxTextBox("instance").option('value', '');
                        $("#txtdepartment").dxTextBox("instance").option('value', '');

                        reloadData();

                        $('#loader').hide();
                    })
                    .fail(function (response, status, error) {
                        DevExpress.ui.notify({
                            message: response.mstatus,
                            type: "error",
                            displayTime: 6000,
                            height: 55,
                            position: "top"
                        });
                        e.preventDefault();
                        $('#loader').hide();
                    });

            });
        });
    });

    function reloadData() {
        $("#usgrid").dxDataGrid("getDataSource").reload();
    }


    function refreshGrid(data) {
        $("#usgrid").dxDataGrid("instance").refresh();
    }
</script>



