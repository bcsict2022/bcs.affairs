@model app.bcs.affairs.Models.vmPasswordChange
@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/page-login-alt.css">
}
@if (ViewBag.loginError != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">
                <i class="fal fa-times"></i>
            </span>
        </button>
        <div class="d-flex flex-start w-100">
            <div class="mr-2">
                <span class="icon-stack icon-stack-lg">
                    <i class="base-4 icon-stack-3x color-danger-400"></i>
                    <i class="base-4 icon-stack-2x color-danger-600 opacity-70"></i>
                    <i class="fal fa-exclamation-triangle icon-stack-1x text-white opacity-90"></i>
                </span>
            </div>
            <div class="d-flex flex-fill">
                <div class="flex-fill">
                    <span class="h5">Exception:</span>
                    <br> @ViewBag.loginError
                </div>
            </div>
        </div>
    </div>
}
<div class="blankpage-form-field" style="width:350px; margin:0 auto;margin-top:40px">
    <div class="page-logo m-0 w-100 align-items-center justify-content-center rounded border-bottom-left-radius-0 border-bottom-right-radius-0 px-4">
        <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
            <img src="~/images/logo.png" alt="FGN Books" aria-roledescription="logo">
            <span class="page-logo-text mr-1">FGN Books</span>
            <i class="fal fa-angle-down d-inline-block ml-1 fs-lg color-primary-300"></i>
        </a>
    </div>
    <div class="card p-4 border-top-left-radius-0 border-top-right-radius-0">
        @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
        {
            <form>
                <div class="form-group">
                    <label class="form-label" for="username">Username</label>
                    <input type="email" id="username" class="form-control" placeholder="your id or email" value="">
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    @(Html.DevExtreme().TextBoxFor(m => m.FormerPassword)
                        .Width("100%").Mode(TextBoxMode.Password)
                        .Placeholder("enter current password").ID("txtPassword"))
                </div>
                <div class="form-group">
                    <label class="form-label" for="newPassword">New Password</label>
                    @Html.DevExtreme().TextBoxFor(m => m.NewPassword).Width("100%").Mode(TextBoxMode.Password).Placeholder("enter your new password").ID("txtNewPassword")
                </div>
                <div class="form-group">
                    <label class="form-label" for="confirmPassword">Confirm Password</label>
                    @Html.DevExtreme().TextBoxFor(m => m.ConfirmPassword).Width("100%").Mode(TextBoxMode.Password).Placeholder("enter confirm password").ID("txtConfirmPassword")
                </div>
                @*<button type="submit" class="btn btn-default float-right">Secure login</button>*@
                <div class="form-group">
                    @(Html.DevExtreme().Button().Text("Change Password").Height(35)
                        .Width("100%").UseSubmitBehavior(true)
                        .Type(ButtonType.Default)
                        .ID("button"))
                </div>
            </form>
        }
    </div>
    <div class="blankpage-footer text-center">
        <a asp-action="Index" asp-controller="Home"><strong>Login Instead</strong></a>
    </div>
</div>
<div class="login-footer p-2">
    <div class="row">
        <div class="col col-sm-12 text-center">
        </div>
    </div>
</div>
