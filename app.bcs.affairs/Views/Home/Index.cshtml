@model app.bcs.affairs.Models.vmLogin
@{
    ViewData["Title"] = "Gate Way";
    ViewData["Category1"] = "BCS Affairs";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@section HeadBlock {
}
@if (ViewBag.loginError != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">
                <i class="fal fa-times"></i>
            </span>
        </button>
        <div class="d-flex flex-start w-100">
            <div class="mr-2">
                <span class="icon-stack icon-stack-lg">
                    <i class="base-4 icon-stack-3x color-danger-400"></i>
                    <i class="base-4 icon-stack-2x color-danger-600 opacity-70"></i>
                    <i class="fal fa-exclamation-triangle icon-stack-1x text-white opacity-90"></i>
                </span>
            </div>
            <div class="d-flex flex-fill">
                <div class="flex-fill">
                    <span class="h5">Exception:</span>
                    <br> @ViewBag.loginError
                </div>
            </div>
        </div>
    </div>
}

@*<img src="~/images/bg.jpeg" />*@
<div class="container-fluid" style="background-image:url(~/images/bg.jpeg);background-size: cover;">
    <div class="row" style="height:60px;margin-top:80px">
        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="card p-4 border-top-left-radius-0 border-top-right-radius-0">
                <div class="row">
                    @*<div class="col-6">
                    <img src="~/images/DNPFLogo.png" style="display:block;" height="160" width="550" />
                    </div>
                    <div class="col-1"></div>*@
                    <div class="col-12">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            <form id="PostForm">
                                <div class="row" style="margin-top:10px;">
                                    <div class="col-sm-12">
                                        <div class="form-group text-center">
                                            Gate-Way
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:50px;">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            @Html.DevExtreme().TextBoxFor(m => m.UserId).Width("100%").Placeholder("your email address here.....").ID("txtUserId")
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:5px;">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            @Html.DevExtreme().TextBoxFor(m => m.Password).Width("100%").Mode(TextBoxMode.Password).Placeholder("your password here....").ID("txtPassword")
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:10px;">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            @(Html.DevExtreme().Button().Text("Log in").Height(35)
                                                .Width("100%").UseSubmitBehavior(true)
                                                .Type(ButtonType.Normal)
                                                .StylingMode(ButtonStylingMode.Outlined)
                                                .ID("button"))
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:20px;">
                <div class="col-12 text-center">
                    <span id="siteseal">
                        <script async type="text/javascript" src="https://seal.starfieldtech.com/getSeal?sealID=xJQ3RuyeqkDzDMrMvLlbZMlTqDz2e0EwgQsY85ElBGkXQA70YlQsHRRiVqs2"></script>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-4">
        </div>
    </div>

</div>

