@using Microsoft.AspNetCore.Http
<div class="dropdown-header bg-trans-gradient d-flex flex-row py-4 rounded-top">
    <div class="d-flex flex-row align-items-center mt-1 mb-1 color-white">
        <span class="mr-2">
            <img src="~/images/avatar-admin.png" class="rounded-circle profile-image" alt="dnpf_user">
        </span>
        <div class="info-card-text">
            <div class="fs-lg text-truncate text-truncate-lg">@Context.Session.GetString("_userName")</div>
            <span class="text-truncate text-truncate-md opacity-80">@Context.Session.GetString("_userId")</span>
        </div>
    </div>
</div>
<div class="dropdown-divider m-0"></div>
<a class="dropdown-item" asp-controller="Home" asp-action="DashBoards">
    <span data-i18n="drpdwn.reset_layout">Dashboard</span>
</a>
<a class="dropdown-item" asp-controller="Home" asp-action="ChangePassword">
    <span data-i18n="drpdwn.settings">Change Password</span>
</a>
<div class="dropdown-divider m-0"></div>
<a class="dropdown-item fw-500 pt-3 pb-3" asp-controller="Home" asp-action="SignOff">
    <span data-i18n="drpdwn.page-logout">Logout</span>
    <span class="float-right fw-n">&commat;@Context.Session.GetString("_userId")</span>
</a>
